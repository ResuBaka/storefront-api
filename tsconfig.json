{
  "compilerOptions": {
    "target": "es6",
    "strict": false,
    "allowJs": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "preserveSymlinks": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["es7"]
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "migrations/**/*"
  ]
}
